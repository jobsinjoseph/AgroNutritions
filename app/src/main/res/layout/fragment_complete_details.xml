<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/warmWhites"
    android:padding="8dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:focusable="true"
            android:background="@drawable/bg_2"
            android:focusableInTouchMode="true"
            >

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="52dp"
                android:gravity="center|left"
                android:text="Complete Profile"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/poppins_medium"
                android:textSize="18dp"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="24dp"
                android:layout_weight="1"
                android:background="@drawable/rect_login_field_bg_green"
                android:textColor="@color/colorOffBlack"

                android:fontFamily="@font/poppins_medium"
                android:gravity="center|left"
                android:hint="Full Name"

                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="textPersonName"
                android:paddingTop="6dp"
                android:paddingLeft="6dp"
                android:paddingBottom="3dp"
                android:paddingRight="6dp"
                android:textColorHint="@color/colorGreyDisabled"
                app:layout_constraintBottom_toTopOf="@+id/edt_address"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/edt_address"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="24dp"
                android:layout_weight="1"
                android:textColor="@color/colorOffBlack"
                android:gravity="center|left"
                android:background="@drawable/rect_login_field_bg_green"
                android:hint="Address"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingTop="6dp"
                android:paddingLeft="6dp"
                android:paddingBottom="3dp"
                android:paddingRight="6dp"
                android:fontFamily="@font/poppins_medium"
                android:textColorHint="@color/colorGreyDisabled"
                app:layout_constraintBottom_toTopOf="@+id/textView1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="52dp"
                android:gravity="center|left"
                android:text="Complete Delivery Details"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"
                android:visibility="visible"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintBottom_toTopOf="@+id/delivery_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/delivery_name"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="24dp"
                android:layout_weight="1"

                android:gravity="center|left"
                android:hint="Delivery Name"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/rect_login_field_bg_green"
                android:textColor="@color/colorOffBlack"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingTop="6dp"
                android:paddingLeft="6dp"
                android:paddingBottom="3dp"
                android:paddingRight="6dp"
                android:textColorHint="@color/colorGreyDisabled"
                app:layout_constraintBottom_toTopOf="@+id/house_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/house_name"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="24dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/rect_login_field_bg_green"
                android:gravity="center|left"
                android:textColor="@color/colorOffBlack"
                android:hint="House Name"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingTop="6dp"
                android:paddingLeft="6dp"
                android:paddingBottom="3dp"
                android:paddingRight="6dp"
                android:textColorHint="@color/colorGreyDisabled"
                app:layout_constraintBottom_toTopOf="@+id/phone_number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/phone_number"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="24dp"
                android:layout_weight="1"
                android:maxLength="10"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center|left"
                android:background="@drawable/rect_login_field_bg_green"
                android:hint="Phone Number"
                android:textColor="@color/colorOffBlack"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:paddingTop="6dp"
                android:paddingLeft="6dp"
                android:paddingBottom="3dp"
                android:paddingRight="6dp"
                android:textColorHint="@color/colorGreyDisabled"
                app:layout_constraintBottom_toTopOf="@+id/cntryLay"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:id="@+id/cntryLay"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="24dp"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="2"
                app:layout_constraintBottom_toTopOf="@+id/stateLay"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <Spinner
                    android:id="@+id/cntry"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="2dp" />

                <ImageView
                    android:visibility="gone"
                    android:src="@drawable/ic_down"
                    android:layout_weight="0.35"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/stateLay"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="24dp"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="2"
                app:layout_constraintBottom_toTopOf="@+id/town"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <Spinner
                    android:id="@+id/state"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="2dp" />

                <ImageView
                    android:visibility="gone"
                    android:src="@drawable/ic_down"
                    android:layout_weight="0.35"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <EditText
                android:id="@+id/town"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="24dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/rect_login_field_bg_green"

                android:gravity="center|left"
                android:textColor="@color/colorOffBlack"
                android:hint="Town"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingTop="6dp"
                android:paddingLeft="6dp"
                android:paddingBottom="3dp"
                android:paddingRight="6dp"
                android:textColorHint="@color/colorGreyDisabled"
                app:layout_constraintBottom_toTopOf="@+id/city"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <EditText
                android:id="@+id/city"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="24dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/rect_login_field_bg_green"
                android:gravity="center|left"
                android:textColor="@color/colorOffBlack"
                android:hint="City"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingTop="6dp"
                android:paddingLeft="6dp"
                android:paddingBottom="3dp"
                android:paddingRight="6dp"
                android:textColorHint="@color/colorGreyDisabled"
                app:layout_constraintBottom_toTopOf="@+id/street"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/street"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="24dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/rect_login_field_bg_green"

                android:gravity="center|left"
                android:textColor="@color/colorOffBlack"
                android:hint="Street"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingTop="6dp"
                android:paddingLeft="6dp"
                android:paddingBottom="3dp"
                android:paddingRight="6dp"
                android:textColorHint="@color/colorGreyDisabled"
                app:layout_constraintBottom_toTopOf="@+id/pincode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/pincode"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="24dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:fontFamily="@font/poppins_medium"
                android:hint="Pin code"
                android:background="@drawable/rect_login_field_bg_green"
                android:textColor="@color/colorOffBlack"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingTop="6dp"
                android:paddingLeft="6dp"
                android:paddingBottom="3dp"
                android:paddingRight="6dp"
                android:textColorHint="@color/colorGreyDisabled"
                app:layout_constraintBottom_toTopOf="@+id/llchk"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />



            <LinearLayout
                android:id="@+id/llchk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal"
                android:weightSum="2"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_next_c"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="ADDRESS"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"
                    android:visibility="visible" />

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorBlack"
                    android:buttonTint="@color/cart_icon_color"
                    android:gravity="center|left"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Same as above" />

            </LinearLayout>


            <TextView
                android:id="@+id/btn_next_c"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/black_button_bg_green"
                android:gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:padding="4dp"
                android:text="Next"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
