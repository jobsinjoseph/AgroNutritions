<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@color/TransparentFull"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:padding="9dp"
        android:background="@drawable/success_box_bg_top"
        android:layout_width="match_parent"
        android:layout_height="128dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/individualHistoryRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/success_box_bg_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <View
            android:layout_marginTop="4dp"
            android:background="@color/colorGrey"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:padding="3dp"
            android:weightSum="2.1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginTop="3dp">

            <Button
                android:visibility="visible"
                android:id="@+id/buttonCancel"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/rect_curved_corner_green_border_white_filled"
                android:text="close"
                android:textColor="@color/colorBlack" />



        </LinearLayout>

    </LinearLayout>


</LinearLayout>