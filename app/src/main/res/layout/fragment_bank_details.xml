<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/warmWhites"
    android:padding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:focusable="true"
        android:background="@drawable/bg_2"
        android:focusableInTouchMode="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="52dp"
            android:gravity="center"
            android:visibility="gone"
            android:text="Your Details"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/holdername" />

        <EditText
            android:id="@+id/holdername"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:textColor="@color/colorOffBlack"
            android:layout_marginBottom="24dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:hint="Bank holder Name"
            android:fontFamily="@font/poppins_medium"
            android:background="@drawable/rect_login_field_bg_green"
            android:imeOptions="actionNext|flagNoExtractUi"
            android:inputType="textPersonName"
            android:paddingTop="6dp"
            android:paddingLeft="6dp"
            android:paddingBottom="3dp"
            android:paddingRight="6dp"
            android:textColorHint="@color/colorGreyDisabled"
            app:layout_constraintBottom_toTopOf="@+id/bnk_account_no" />

        <EditText
            android:id="@+id/bnk_account_no"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="24dp"
            android:layout_weight="1"
            android:textColor="@color/colorOffBlack"
            android:gravity="center|left"
            android:hint="Bank Account Number"
            android:background="@drawable/rect_login_field_bg_green"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:paddingTop="6dp"
            android:paddingLeft="6dp"
            android:paddingBottom="3dp"
            android:paddingRight="6dp"
            android:fontFamily="@font/poppins_medium"
            android:textColorHint="@color/colorGreyDisabled"
            app:layout_constraintBottom_toTopOf="@+id/bank_ifsc_code" />

        <EditText
            android:id="@+id/bank_ifsc_code"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="24dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:textColor="@color/colorOffBlack"
            android:background="@drawable/rect_login_field_bg_green"
            android:hint="IFSC Code"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:paddingTop="6dp"
            android:paddingLeft="6dp"
            android:paddingBottom="3dp"
            android:paddingRight="6dp"
            android:fontFamily="@font/poppins_medium"
            android:textColorHint="@color/colorGreyDisabled"
            app:layout_constraintBottom_toTopOf="@+id/bnk_name" />

        <EditText
            android:id="@+id/bnk_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/poppins_medium"
            android:layout_weight="1"

            android:gravity="center|left"
            android:textColor="@color/colorOffBlack"
            android:background="@drawable/rect_login_field_bg_green"
            android:hint="Bank Name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:paddingTop="6dp"
            android:paddingLeft="6dp"
            android:paddingBottom="3dp"
            android:paddingRight="6dp"
            android:textColorHint="@color/colorGreyDisabled"
            app:layout_constraintBottom_toTopOf="@+id/bnk_branch" />

        <EditText
            android:id="@+id/bnk_branch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="24dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center|left"
            android:hint="Branch"
            android:textColor="@color/colorOffBlack"
            android:background="@drawable/rect_login_field_bg_green"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:paddingTop="6dp"
            android:paddingLeft="6dp"
            android:paddingBottom="3dp"
            android:paddingRight="6dp"
            android:textColorHint="@color/colorGreyDisabled"
            app:layout_constraintBottom_toTopOf="@+id/paytype" />
        <TextView
            android:id="@+id/paytype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="10dp"
            android:gravity="left"
            android:visibility="visible"
            android:fontFamily="@font/poppins_medium"
            android:text="Salary Method"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/bnk_pay_type" />
        <RadioGroup
            android:id="@+id/bnk_pay_type"
            android:layout_width="match_parent"

            android:gravity="center|left"
            android:layout_height="40dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="24dp"
            android:padding="6dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_next"
            android:orientation="horizontal">

            <RadioButton
                android:layout_weight="1"
                android:id="@+id/weekly"
                android:tag="1"
                android:checked="true"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="Weekly"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/monthly"
                android:layout_weight="1"
                android:tag="2"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="wrap_content"
                android:textColor="@color/colorBlack"
                android:layout_height="wrap_content"
                android:text="Monthly"
                android:textSize="18sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="Next"
            android:background="@drawable/black_button_bg_green"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
